---
import type {CollectionEntry} from 'astro:content';

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SectionContainer from "../components/SectionContainer.astro";

import {SITE_METADATA} from "../consts";

type Props = {
    title: string;
    description?: string;
    robots?: string;
};

const { title, description, robots } = Astro.props;

---

<html lang={SITE_METADATA.language} class="scroll-smooth">
<BaseHead {title} description={description ?? ''} {robots}/>
<body class="bg-white text-black antialiased dark:bg-gray-950 dark:text-white">

<SectionContainer>
    <div class="flex h-screen flex-col justify-between font-sans">
        <Header/>
        <main class="mb-auto">
            <slot/>
        </main>
        <Footer/>
    </div>
</SectionContainer>
</body>
</html>
