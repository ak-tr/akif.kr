---
interface Props {
    title: string;
    description: string[];
    link?: {
        text: string;
        href: string;
    };
}

const {title, description, link} = Astro.props;
---

<div class="not-prose flex flex-col gap-1 mt-12 border border-gray-200 dark:border-gray-700 rounded-md p-6 bg-gray-50 dark:bg-gray-800">
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
    {title}
  </h3>
  {description.map((desc) => (
    <p class="text-gray-700 dark:text-gray-300">
      {desc}
    </p>
  ))}
  {link && (
    <div class="mt-4">
      <a
        href={link.href}
        class="inline-block text-sm font-medium text-purple-600 dark:text-purple-400 hover:underline"
        target="_blank"
        rel="noopener noreferrer"
      >
        {link.text}
      </a>
    </div>
  )}
</div>
