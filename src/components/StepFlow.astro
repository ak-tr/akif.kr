---
export interface Props {
  steps: string[];
}

const { steps } = Astro.props;
---

<div class="w-full flex justify-center my-6">
  <div class="flex flex-col sm:flex-row sm:flex-nowrap items-center gap-3 w-fit">
    {steps.map((step, index) => (
      <>
        <div class="font-mono bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-gray-100 px-4 py-1.5 rounded text-sm font-semibold text-center">
          {step}
        </div>
        {index < steps.length - 1 && (
          <>
            <div class="text-gray-500 dark:text-gray-400 sm:hidden">↓</div>
            <div class="hidden sm:block text-gray-500 dark:text-gray-400">→</div>
          </>
        )}
      </>
    ))}
  </div>
</div>